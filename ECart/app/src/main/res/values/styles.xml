<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppNameLogoTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/lobster_regular</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppSloganTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullScreenButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:padding">@dimen/_20sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginTypeTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="LoginRegisterMaterialTextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/themeColor</item>
    </style>

    <style name="LoginRegisterEditTextStyle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="LoginRegisterTypeLogoTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginRegisterConstraintBgStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:alpha">0.9</item>
        <item name="android:background">@drawable/constraint_bg</item>
        <item name="android:padding">@dimen/_4sdp</item>
    </style>

    <style name="LoginRegisterButtonStyle">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_16sdp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategoryImageViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:background">@drawable/category_img_view_border</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>
    </style>

</resources>