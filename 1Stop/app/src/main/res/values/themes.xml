<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.1Stop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.1Stop.MaterialToolBar" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AlertDialogTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Alert.Button.Positive</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/colorTransparentBlack</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ProgressDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.1Stop.Splash">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/ic_spalsh_screen_svg</item>
    </style>

    <style name="ButtonTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="LoginRegisterTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_14sdp</item>
        <item name="android:layout_marginEnd">@dimen/_32sdp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/colorBlackText_CC000000</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="LoginRegisterEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:background">@drawable/bg_edittext_border_rounded</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="LoginRegisterLogoTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_22sdp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="CovidStopImageViewLogoStyle">
        <item name="android:layout_width">@dimen/_140sdp</item>
        <item name="android:layout_height">@dimen/_90sdp</item>
        <item name="android:layout_marginTop">@dimen/_42sdp</item>
        <item name="android:src">@drawable/app_logo</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:background">@drawable/bg_button_orange_rounded</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Safe4ImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="WelcomeCheckImageViewStyle">
        <item name="android:layout_width">@dimen/_24sdp</item>
        <item name="android:layout_height">@dimen/_24sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:src">@drawable/ic_welcome_check_svg</item>
    </style>

    <style name="WelcomeCheckTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="SocialMediaImageViewStyle">
        <item name="android:layout_width">@dimen/_36sdp</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:layout_marginTop">@dimen/_32sdp</item>
        <item name="android:layout_marginEnd">@dimen/_22sdp</item>
    </style>

    <style name="MaterialCheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="LoginRegisterCBTexView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/colorBlackText_CC000000</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="VerifyTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="LoginRegisterTextVerifyViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

</resources>