<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:paddingStart="@dimen/_16sdp"
    android:paddingEnd="@dimen/_16sdp"
    android:scrollbars="none">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dv_marginStart"
                android:layout_marginTop="@dimen/dv_marginTop"
                android:layout_marginEnd="@dimen/dv_marginEnd"
                android:background="@drawable/shape_rounded_efefe9_dv_bg"
                android:elevation="@dimen/dv_elevation"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/dv_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property Type : "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/txtPropertyType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15ssp"
                    tools:text="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dv_marginStart"
                android:layout_marginTop="@dimen/dv_marginTop"
                android:layout_marginEnd="@dimen/dv_marginEnd"
                android:background="@drawable/shape_rounded_f4f4f4_dv_bg"
                android:elevation="@dimen/dv_elevation"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/dv_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ownership Status : "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/txtOwnershipStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15ssp"
                    tools:text="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOwned"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dv_marginStart"
                    android:layout_marginTop="@dimen/dv_marginTop"
                    android:layout_marginEnd="@dimen/dv_marginEnd"
                    android:background="@drawable/shape_rounded_efefe9_dv_bg"
                    android:elevation="@dimen/dv_elevation"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dv_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location Name : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txtLocationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dv_marginStart"
                    android:layout_marginTop="@dimen/dv_marginTop"
                    android:layout_marginEnd="@dimen/dv_marginEnd"
                    android:background="@drawable/shape_rounded_f4f4f4_dv_bg"
                    android:elevation="@dimen/dv_elevation"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dv_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City Name : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txtCityName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dv_marginStart"
                    android:layout_marginTop="@dimen/dv_marginTop"
                    android:layout_marginEnd="@dimen/dv_marginEnd"
                    android:background="@drawable/shape_rounded_efefe9_dv_bg"
                    android:elevation="@dimen/dv_elevation"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dv_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Property Address : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txtPropertyAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dv_marginStart"
                    android:layout_marginTop="@dimen/dv_marginTop"
                    android:layout_marginEnd="@dimen/dv_marginEnd"
                    android:background="@drawable/shape_rounded_f4f4f4_dv_bg"
                    android:elevation="@dimen/dv_elevation"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dv_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase Date : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txtPurchaseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dv_marginStart"
                    android:layout_marginTop="@dimen/dv_marginTop"
                    android:layout_marginEnd="@dimen/dv_marginEnd"
                    android:background="@drawable/shape_rounded_efefe9_dv_bg"
                    android:elevation="@dimen/dv_elevation"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dv_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchase Price : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txtPurchasePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp"
                        tools:text="@string/app_name" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRented"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dv_marginStart"
                    android:layout_marginTop="@dimen/dv_marginTop"
                    android:layout_marginEnd="@dimen/dv_marginEnd"
                    android:background="@drawable/shape_rounded_efefe9_dv_bg"
                    android:elevation="@dimen/dv_elevation"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dv_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tenant Name : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txtTenantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dv_marginStart"
                    android:layout_marginTop="@dimen/dv_marginTop"
                    android:layout_marginEnd="@dimen/dv_marginEnd"
                    android:background="@drawable/shape_rounded_f4f4f4_dv_bg"
                    android:elevation="@dimen/dv_elevation"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dv_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tenant Number : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txtTenantNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dv_marginStart"
                    android:layout_marginTop="@dimen/dv_marginTop"
                    android:layout_marginEnd="@dimen/dv_marginEnd"
                    android:background="@drawable/shape_rounded_efefe9_dv_bg"
                    android:elevation="@dimen/dv_elevation"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dv_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agreement Start Date : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txtAgreementStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dv_marginStart"
                    android:layout_marginTop="@dimen/dv_marginTop"
                    android:layout_marginEnd="@dimen/dv_marginEnd"
                    android:background="@drawable/shape_rounded_f4f4f4_dv_bg"
                    android:elevation="@dimen/dv_elevation"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dv_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agreement End Date : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txtAgreementEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dv_marginStart"
                    android:layout_marginTop="@dimen/dv_marginTop"
                    android:layout_marginEnd="@dimen/dv_marginEnd"
                    android:background="@drawable/shape_rounded_efefe9_dv_bg"
                    android:elevation="@dimen/dv_elevation"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dv_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rent Collection Date : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txtRentCollectionDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dv_marginStart"
                    android:layout_marginTop="@dimen/dv_marginTop"
                    android:layout_marginEnd="@dimen/dv_marginEnd"
                    android:background="@drawable/shape_rounded_f4f4f4_dv_bg"
                    android:elevation="@dimen/dv_elevation"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dv_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rent Amount : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txtRentAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp"
                        tools:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dv_marginStart"
                    android:layout_marginTop="@dimen/dv_marginTop"
                    android:layout_marginEnd="@dimen/dv_marginEnd"
                    android:background="@drawable/shape_rounded_efefe9_dv_bg"
                    android:elevation="@dimen/dv_elevation"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/dv_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rented property address : "
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txtRentedPropertyAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp"
                        tools:text="@string/app_name" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dv_marginStart"
                android:layout_marginTop="@dimen/dv_marginTop"
                android:layout_marginEnd="@dimen/dv_marginEnd"
                android:background="@drawable/shape_rounded_efefe9_dv_bg"
                android:elevation="@dimen/dv_elevation"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/dv_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status : "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15ssp"
                    tools:text="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dv_marginStart"
                android:layout_marginTop="@dimen/dv_marginTop"
                android:layout_marginEnd="@dimen/dv_marginEnd"
                android:background="@drawable/shape_rounded_f4f4f4_dv_bg"
                android:elevation="@dimen/dv_elevation"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/dv_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Images : "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15ssp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:itemCount="2"
                    tools:listitem="@layout/list_item_selected_images" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtOk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_btn_bg"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="OK"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_16ssp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddRemainder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@color/colorAccent"
        android:src="@drawable/ic_add_reminder"
        app:backgroundTint="@color/colorAccent"
        app:tint="@color/colorWhite" />
</RelativeLayout>