<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:paddingStart="@dimen/_16sdp"
    android:paddingEnd="@dimen/_16sdp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_6sdp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_15ssp"
            app:met_errorColor="#DA1616"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Company" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Policy Type : "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15ssp" />

            <Spinner
                android:id="@+id/spPolicyType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:overlapAnchor="false"
                android:padding="10dp" />
        </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etPolicyNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:hint="Policy Number"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_15ssp"
            app:met_errorColor="#DA1616"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Policy Number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue Date : "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15ssp" />

            <TextView
                android:id="@+id/txtIssueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Select Issue Date"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Date : "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15ssp" />

            <TextView
                android:id="@+id/txtExpiryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Select Expiry Date"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Mode : "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15ssp" />

            <Spinner
                android:id="@+id/spPaymentMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:overlapAnchor="false"
                android:padding="10dp" />
        </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etInsuranceAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:hint="Insurance Amount"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_15ssp"
            app:met_errorColor="#DA1616"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Insurance Amount" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etPremium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:hint="Premium"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_15ssp"
            app:met_errorColor="#DA1616"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Premium" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etAgentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:hint="Agent Name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_15ssp"
            app:met_errorColor="#DA1616"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Agent Name" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etAgentContactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:digits="0123456789"
            android:hint="Agent Contact Number"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_15ssp"
            app:met_errorColor="#DA1616"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Agent Contact Number" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:hint="Description"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_15ssp"
            app:met_errorColor="#DA1616"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Image : "
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSelectedImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_square_border_cornered_gray"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_place_holder"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtSelectImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/shape_btn_bg"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="Add Image"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16ssp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvVehicalImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_square_border_cornered_gray"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:itemCount="2"
                tools:listitem="@layout/list_item_selected_images" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_bg"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="ADD"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/txtCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_bg"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="Cancel"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>