<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:padding="@dimen/_16sdp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etSearchBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_rect_bg"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/search_businesses"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:padding="@dimen/_8sdp"
        android:textColorHint="#868F94"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toStartOf="@+id/imgFilter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imgFilter"
        app:layout_constraintEnd_toStartOf="@+id/imgFilter"
        app:layout_constraintTop_toTopOf="@+id/imgFilter"
        app:srcCompat="@drawable/ic_search" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgFilter"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_4sdp"
        android:paddingStart="@dimen/_4sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/etSearchBusiness"
        app:layout_constraintEnd_toEndOf="@+id/etSearchBusiness"
        app:layout_constraintTop_toTopOf="@+id/etSearchBusiness"
        app:srcCompat="@drawable/ic_eva_options_2_outline" />
</androidx.constraintlayout.widget.ConstraintLayout>