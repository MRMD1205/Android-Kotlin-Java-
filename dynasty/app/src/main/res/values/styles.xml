<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowBackground">@drawable/bg_splash</item>-->
    </style>

    <style name="BottomSheetStyleTransparent" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="ChipStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
    </style>

    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorTitle_27413C</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="BottomSheetThemeBecomeAdvisor" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleTransparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/colorTitle_373A3C</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="TextViewStyleRegular" parent="TextViewStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextViewStyleMedium" parent="TextViewStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextViewStyleBold" parent="TextViewStyle">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="AppTheme.ProgressDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">#00000000</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AlertDialogTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:colorAccent" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle" tools:ignore="NewApi">@style/Alert.Button.Positive</item>
    </style>

    <style name="SocialIconsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_18sdp</item>
    </style>

    <style name="textDescriptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">@dimen/_16sdp</item>
        <item name="android:textColor">@color/gray_8027413C</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="OrangeTitleForDetailSection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.4</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="cardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_4sdp</item>
 <!--       <item name="android:layout_marginTop">@dimen/_18sdp</item>-->
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
    </style>

    <style name="DetailsSectionHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_56sdp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>