<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".billing"
    android:padding="10dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/bill_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bill"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:gravity="center_horizontal" />


    <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bill_title"
            android:text="Date :-"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/set_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/date"
            android:layout_below="@id/bill_title"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :-"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/date"
        android:layout_marginTop="25dp"/>

    <AutoCompleteTextView
        android:id="@+id/set_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Customer Name"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/name"
        android:layout_below="@+id/set_date"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="13dp"
        android:completionThreshold="1"
        android:inputType="textNoSuggestions"/>

    <TextView
        android:id="@+id/bill_phno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone :-"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/name"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/set_phno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/bill_phno"
        android:layout_below="@id/set_name"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="17dp"/>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bill_phno"
        android:layout_marginVertical="25dp">

        <TableRow
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1px">

            <AutoCompleteTextView
                android:id="@+id/bill_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="textNoSuggestions"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/bill_service_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/bill_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorPrimary">
            </EditText>

            <TextView
                android:id="@+id/qty_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorPrimary" />

        </TableRow>

    </TableLayout>


    <TextView
        android:id="@+id/grandTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total :-"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/table"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/table"
        android:layout_toRightOf="@+id/grandTotal"
        android:gravity="center"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="23dp"/>


    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount Rate:-"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/grandTotal"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/discount_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/totalAmount"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/discount"
        android:gravity="center"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/discountPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount Price :-"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/discount"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/discount_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/discount_rate"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/discountPrice"
        android:gravity="center"
        android:layout_marginLeft="10dp" />


    <TextView
        android:id="@+id/Payable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payable Amount:-"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/discountPrice"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/PayableAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/discount_price"
        android:layout_toRightOf="@+id/Payable"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/create_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PayableAmount"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttons"
        android:padding="10dp"
        android:text="Create Bill"
        android:textColor="#ffffff" />


</RelativeLayout>