<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnterGradesFragment">

    <!--Edit text to enter student name-->
    <EditText
        android:id="@+id/edit_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Student Name" />

    <!--edit text to enter program-->
    <EditText
        android:id="@+id/edit_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Program" />

    <!--edit text to display course 1 marks-->
    <EditText
        android:id="@+id/edit_course1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter marks for course 1"
        android:inputType="number" />

    <!--edit text for course 2 marks-->
    <EditText
        android:id="@+id/edit_course2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter marks for course 2"
        android:inputType="number" />

    <!--edit text for course 3 marks-->
    <EditText
        android:id="@+id/edit_course3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter marks for course 3"
        android:inputType="number" />

    <!--edit text for course 4 marks-->
    <EditText
        android:id="@+id/edit_course4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter marks for course 4"
        android:inputType="number" />

    <!--button for adding new course-->
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Add"
        android:textAllCaps="false" />

</LinearLayout>